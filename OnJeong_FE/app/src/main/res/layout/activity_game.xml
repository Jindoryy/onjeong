<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white"
    android:orientation="vertical">

    <include layout="@layout/activity_main_bar" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alignmentMode="alignMargins"
        android:columnCount="1"
        android:columnOrderPreserved="false"
        android:rowCount="3">

        <LinearLayout
            android:id="@+id/game1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="40dp"
            android:weightSum="3"
            android:background="@drawable/rect_round_main_color_button"
            android:backgroundTint="@color/light_gray"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/large"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="퍼즐 게임" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/game1_start"
                    style="@style/large"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rect_round_main_color_button"
                    android:text="게임 시작" />

                <Button
                    android:id="@+id/game1_description"
                    style="@style/large"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rect_round_main_color_button"
                    android:backgroundTint="@color/charcoal"
                    android:text="게임 방법"
                    android:textColor="@color/main_color" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/game2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:weightSum="3"
            android:layout_margin="40dp"
            android:background="@drawable/rect_round_main_color_button"
            android:backgroundTint="@color/light_gray"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/large"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="짝 맞추기" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/game2_start"
                    style="@style/large"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rect_round_main_color_button"
                    android:text="게임 시작" />

                <Button
                    android:id="@+id/game2_description"
                    style="@style/large"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rect_round_main_color_button"
                    android:backgroundTint="@color/charcoal"
                    android:text="게임 방법"
                    android:textColor="@color/main_color" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/game_rank"
            style="@style/large"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="60dp"
            android:background="@drawable/green_round"
            android:backgroundTint="@color/light_gray"
            android:text="순위 보기" />

    </GridLayout>


</LinearLayout>
